    <plugin>
        <artifactId>maven-antrun-plugin</artifactId>

        <executions>
          <execution>
            <id>site</id>
            <phase>site</phase>
            <configuration>
              <tasks>

                <copy todir="../../target/site/${project.artifactId}">
                  <fileset dir="target/site"/>
                </copy>

              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
  
         <execution>
            <id>install</id>
            <phase>install</phase>
            <configuration>
              <tasks>
                <condition property="extension" value="bat" else="sh">
                  <os family="Windows"/>
                </condition>

                <exec executable="mvn.${extension}">
                  <arg line="source:jar javadoc:jar"/>
                </exec>
 
               <exec executable="mvn.${extension}">
                  <arg value='install:install-file'/>
                  <arg value='"-Dfile=${project.build.directory}/${artifactId}-sources.jar"'/>
                  <arg value='"-DgroupId=${groupId}"'/>
                  <arg value='"-DartifactId=${artifactId}"'/>
                  <arg value='"-Dversion=${version}"'/>
                  <arg value='"-Dpackaging=${packaging}"'/>
                  <arg value='"-Dclassifier=sources"'/>
                  <arg value='"-DgeneratePom=true"'/>
                </exec>

               <exec executable="mvn.${extension}">
                  <arg value='install:install-file'/>
                  <arg value='"-Dfile=${project.build.directory}/${artifactId}-javadoc.jar"'/>
                  <arg value='"-DgroupId=${groupId}"'/>
                  <arg value='"-DartifactId=${artifactId}"'/>
                  <arg value='"-Dversion=${version}"'/>
                  <arg value='"-Dpackaging=${packaging}"'/>
                  <arg value='"-Dclassifier=javadoc"'/>
                  <arg value='"-DgeneratePom=true"'/>
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
     </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>

</project>
