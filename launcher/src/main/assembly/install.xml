<assembly>
  <id>install</id>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <includes>
        <include>*.xml</include>

        <include>config.*</include>
        <include>installer.*</include>

        <include>docs/**</include>
        <include>src/main/config/*.*</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>projects</directory>
    
      <includes>
        <include>bootstrap-mini/pom.xml</include>
        <include>bootstrap-mini/target/bootstrap-mini.jar</include>

        <include>classworlds/pom.xml</include>
        <include>classworlds/target/classworlds*.jar</include>

        <include>pom-reader/pom.xml</include>
        <include>pom-reader/target/pom-reader.jar</include>

        <include>jlaunchpad-common/pom.xml</include>
        <include>jlaunchpad-common/target/jlaunchpad-common.jar</include>

        <include>jlaunchpad-launcher/pom.xml</include>
        <include>jlaunchpad-launcher/target/jlaunchpad-launcher.jar</include>
        <include>jlaunchpad-launcher/src/main/config/*.*</include>

        <include>jdom/pom.xml</include>
        <include>jdom/target/jdom.jar</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
